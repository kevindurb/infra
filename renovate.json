{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    ":automergePatch",
    ":automergePr"
  ],
  "platform": "github",
  "repositories": ["kevindurb/infra"],
  "kubernetes": {
    "fileMatch": ["k8s/.+\\.yaml$", "k8s/.+\\.yml$"]
  },
  "argocd": {
    "fileMatch": [
      "k8s/argocd/resources/helm/.+\\.yml$",
      "k8s/argocd/resources/helm/.+\\.yaml$"
    ]
  }
}
